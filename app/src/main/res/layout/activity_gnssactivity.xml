<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GNSSActivity">

    <TextView
        android:id="@+id/textviewLocation_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informações de Localização (Location)"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textviewRumo_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rumo: "
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textviewLocation_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textviewGnssStatus_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informações do Sistema de Satélites (GnssStatus)"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/textviewRumo_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
